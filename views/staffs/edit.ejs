<% layout('layouts/boilerplate') %>


    <div class="col-8"> 
        <h1 class="text-center">Edit this Staff Details</h1>
        <div class="col-6 offset-3">
            <form action="/admin/staffs/<%=staff._id%>?_method=PUT" method="POST" novalidate class="validated-form"> 
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="staff[name]" value="<%=staff.name %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="designation">Designation</label>
                    <input class="form-control" type="text" id="designation" name="staff[designation]" value="<%=staff.designation %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="emailId">Email Id</label>
                    <input class="form-control" type="email" id="emailId" name="staff[emailId]" value="<%=staff.emailId %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="photo">Photo</label>
                    <input class="form-control" type="text" id="photo" name="staff[photo]" value="<%=staff.photo %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="staff">Education</label>
                    <textarea class="form-control" type="text" id="staff" name="staff[education]" required><%=staff.education%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3 btn-group" role="group" aria-label="Basic radio toggle button group" >
                    
                    <input type="radio" class="form-control btn-check" name="staff[centreCode]" id="cce" value="cce" autocomplete="off" <% if(n === '1') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cce">Computer Education</label>

                    <input type="radio" class="form-control btn-check" name="staff[centreCode]" id="cfdt" value="cfdt" autocomplete="off" <% if(n === '2') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cfdt">Fashion & Design Technology</label>
                  
                    <input type="radio" class="form-control btn-check" name="staff[centreCode]" id="cft" value="cft"  autocomplete="off" <% if(n === '3') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cft">Food Technology</label>
                    
                    <input type="radio" class="form-control btn-check" name="staff[centreCode]" id="cms"  value="cms" autocomplete="off" <% if(n === '4') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cms">Media Studies</label>
              </div>
                <div class="mb-3 d-inline">
                    <button class="btn btn-info">Save</button>
                </div>
                <div class="mb-3 d-inline">
                    <a class="btn btn-primary" href="/admin/staffs/<%= staff._id%>">Go Back</a>
                </div>
            </form>
        </div>
    </div>