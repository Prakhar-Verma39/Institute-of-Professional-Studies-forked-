<% layout('layouts/boilerplate') %>

    <div class="col-8"> 
        <h1 class="text-center">All Pages</h1>
        <div class="mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-danger" href="/admin/pages/new">Add a Page</a>
        </div>
    
        <% for (let c of pages){%>
            <div class="card mb-3">
                <div class="row">
                        <div class="card-body ps-4">
                            <h5 class="card-title"><%= c.title %></h5>
                            <p class="card-text"><b>Meta Description: </b><%= c.meta %></p>
                            <p class="card-text"><b>Description : </b><%- c.shortDescription %></p>
                            <a class="btn btn-outline-primary" href="/admin/pages/<%=c._id%>">View more...</a>
                        </div>
                    
                </div>
            </div>
        <% }%>
    </div>   