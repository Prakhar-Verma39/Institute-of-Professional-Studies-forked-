<% layout('layouts/boilerplate') %>


    <div class="col-8">
        <h1 class="text-center">Edit this News</h1>
        <div class="col-6 offset-3">
            <form action="/admin/news/<%=aNews._id%>?_method=PUT" method="POST" novalidate class="validated-form"> 
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="aNews[title]" value="<%=aNews.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description (optional)</label>
                    <input class="form-control" type="text" minlength="0" id="description" name="aNews[description]" value="<%=aNews.description %>" >
                </div>
                <div class="mb-3">
                    <label class="form-label" for="pdfUrl">pdf Url</label>
                    <input class="form-control" type="text" id="pdfUrl" name="aNews[pdfUrl]" value="<%= aNews.pdfUrl %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3 d-inline">
                    <button class="btn btn-info">Save</button>
                </div>
                <div class="mb-3 d-inline">
                    <a class="btn btn-primary" href="/admin/news/<%= aNews._id%>">Go Back</a>
                </div>
            </form>
        </div>
    </div>