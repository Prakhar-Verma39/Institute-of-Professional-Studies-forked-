<% layout('layouts/boilerplate') %>

<div class="col-8"> 
    <h1 class="text-center mb-3">Single File Upload At A Time </h1>
    <div class="col-6 offset-3">

        <form action="/admin/uploads" enctype="multipart/form-data" method="POST">

            <div class="mb-3">
                <label class="form-label" for="img">Upload Image : </label>
                <input class="form-control" type="file" id="img" name="img" required /> 
            </div>
            <div class="mb-3">
                <button  class="btn btn-danger">Submit</button>
            </div> 
        </form>

        <form action="/admin/uploads" enctype="multipart/form-data" method="POST">

            <div class="mb-3">
                <label class="form-label" for="pdf">Upload Document : </label>
                <input class="form-control" type="file" id="pdf" name="pdf" required /> 
            </div>
            <div class="mb-3">
                <button  class="btn btn-danger">Submit</button>
            </div> 
        </form>
    </div>
</div>

