<% layout('layouts/boilerplate') %>

    <div class="col-8"> 
        <h1 class="text-center">All Courses</h1>
        <div class="mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-danger" href="/admin/courses/new">Add a Course</a>
        </div>
    
        <% for (let c of courses){%>
            <div class="card mb-3">
                <div class="row">
                        <div class="card-body ps-4">
                            <h2 class="card-title"><%= c.name %></h2>
                            <p class="card-text "><b>Course Code : </b><%= c.courseCode %></p>
                            <p class="card-text d-inline"><b>Centre Code : </b><%= c.centreCode %></p>
                            <p class="card-text "><b>Duration : </b><%= c.duration %></p>
                            <a class="btn btn-outline-primary" href="/admin/courses/<%=c._id%>">View more...</a>
                        </div>
                    
                </div>
            </div>
        <% }%>
    </div>   