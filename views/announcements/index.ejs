<% layout('layouts/boilerplate') %>

    <div class="col-8"> 
        <h1 class="text-center">All Announcements</h1>
        <div class="mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-danger" href="/admin/announcements/new">Add a Announcement</a>
        </div>
    
        <% for (let c of announcements){%>
            <div class="card mb-3">
                <div class="row">
                        <div class="card-body ps-4">
                            <h2 class="card-title"><%= c.title %></h2>
                            <p class="card-text"><b>DESCRIPTION : </b><%= c.description %></p>
                            <a class="btn btn-outline-primary" href="/admin/announcements/<%=c._id%>">View more...</a>
                        </div>
                    
                </div>
            </div>
        <% }%>
    </div>   