<% layout('layouts/boilerplate') %>


    <div class="col-8"> 
        <h1 class="text-center">Add a new Faculty</h1>
        <div class="col-6 offset-3"> 
            <form action="/admin/faculties" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="faculty[name]" required>
                    <div class="valid-feedback">
                       Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="photo">Photo (optional)</label>
                    <input class="form-control" type="text" id="photo" name="faculty[photo]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="designation">Designation</label>
                    <input class="form-control" type="text" id="designation" name="faculty[designation]" required>
                    <div class="valid-feedback">
                       Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="emailId">Email Id</label>
                    <input class="form-control" type="email" id="emailId" name="faculty[emailId]" required>
                    <div class="valid-feedback">
                       Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="faculty">Education</label>
                    <textarea class="form-control" type="text" id="faculty" name="faculty[education]" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="researchPaperCount">Number of Research Paper(s) Published</label>
                    <input class="form-control" type="number" min="0" id="researchPaperCount" name="faculty[researchPaperCount]" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3 btn-group" role="group" aria-label="Basic radio toggle button group" >
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cce" value="cce" autocomplete="off" checked>
                    <label class="form-label btn btn-outline-dark" for="cce">Computer Education</label>
                  
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cfdt" value="cfdt" autocomplete="off">
                    <label class="form-label btn btn-outline-dark" for="cfdt">Fashion & Design Technology</label>
                  
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cft" value="cft"  autocomplete="off">
                    <label class="form-label btn btn-outline-dark" for="cft">Food Technology</label>
                    
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cms"  value="cms" autocomplete="off">
                    <label class="form-label btn btn-outline-dark" for="cms">Media Studies</label>
              </div>
                <div class="d-inline mb-3">
                    <button class="btn btn-danger">Submit</button>
                </div>
                <div class="d-inline mb-3">
                    <a href="/admin/faculties" class="btn btn-success">Back to All Faculties</a>
                </div>
            </form>
               
        </div>
    </div>
    