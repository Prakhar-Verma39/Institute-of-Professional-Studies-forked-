<% layout('layouts/boilerplate') %>


    <div class="col-8"> 
        <h1 class="text-center">Edit this Faculty Details</h1>
        <div class="col-6 offset-3">
            <form action="/admin/faculties/<%=faculty._id%>?_method=PUT" method="POST" novalidate class="validated-form"> 
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="faculty[name]" value="<%=faculty.name %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="photo">Photo (optional)</label>
                    <input class="form-control" type="text" id="photo" name="faculty[photo]" value="<%=faculty.photo %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="designation">Designation</label>
                    <input class="form-control" type="text" id="designation" name="faculty[designation]" value="<%=faculty.designation %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="emailId">Email Id</label>
                    <input class="form-control" type="email" id="emailId" name="faculty[emailId]" value="<%=faculty.emailId %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="faculty">Education</label>
                    <textarea class="form-control" type="text" id="faculty" name="faculty[education]" required><%=faculty.education%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="researchPaperCount">Number of Paper(s) Published</label>
                    <input class="form-control" type="number" id="researchPaperCount" name="faculty[researchPaperCount]" value="<%= faculty.researchPaperCount %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3 btn-group" role="group" aria-label="Basic radio toggle button group" >
                    
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cce" value="cce" autocomplete="off" <% if(n === '1') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cce">Computer Education</label>

                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cfdt" value="cfdt" autocomplete="off" <% if(n === '2') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cfdt">Fashion & Design Technology</label>
                  
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cft" value="cft"  autocomplete="off" <% if(n === '3') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cft">Food Technology</label>
                    
                    <input type="radio" class="form-control btn-check" name="faculty[centreCode]" id="cms"  value="cms" autocomplete="off" <% if(n === '4') {%><%- `checked` %><% } %>>
                    <label class="form-label btn btn-outline-dark" for="cms">Media Studies</label>
              </div>
                <div class="mb-3 d-inline">
                    <button class="btn btn-info">Save</button>
                </div>
                <div class="mb-3 d-inline">
                    <a class="btn btn-primary" href="/admin/faculties/<%= faculty._id%>">Go Back</a>
                </div>
            </form>
        </div>
    </div>